<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysHomepageMapper">
    
    <resultMap type="SysHomepage" id="SysHomepageResult">
        <result property="id"    column="id"    />
        <result property="homepageTitle"    column="homepage_title"    />
        <result property="homepageNotice"    column="homepage_notice"    />
        <result property="homepageImg"    column="homepage_img"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysHomepageVo">
        select id, homepage_title, homepage_notice, homepage_img, status, del_flag, create_by, create_time, update_by, update_time, remark from sys_homepage
    </sql>

    <select id="selectSysHomepageList" parameterType="SysHomepage" resultMap="SysHomepageResult">
        <include refid="selectSysHomepageVo"/>
        <where>  
            <if test="homepageTitle != null  and homepageTitle != ''"> and homepage_title = #{homepageTitle}</if>
            <if test="homepageNotice != null  and homepageNotice != ''"> and homepage_notice = #{homepageNotice}</if>
            <if test="homepageImg != null  and homepageImg != ''"> and homepage_img = #{homepageImg}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSysHomepageById" parameterType="Long" resultMap="SysHomepageResult">
        <include refid="selectSysHomepageVo"/>
        where id = #{id}
    </select>

    <insert id="insertSysHomepage" parameterType="SysHomepage" useGeneratedKeys="true" keyProperty="id">
        insert into sys_homepage
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="homepageTitle != null and homepageTitle != ''">homepage_title,</if>
            <if test="homepageNotice != null">homepage_notice,</if>
            <if test="homepageImg != null">homepage_img,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="homepageTitle != null and homepageTitle != ''">#{homepageTitle},</if>
            <if test="homepageNotice != null">#{homepageNotice},</if>
            <if test="homepageImg != null">#{homepageImg},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysHomepage" parameterType="SysHomepage">
        update sys_homepage
        <trim prefix="SET" suffixOverrides=",">
            <if test="homepageTitle != null and homepageTitle != ''">homepage_title = #{homepageTitle},</if>
            <if test="homepageNotice != null">homepage_notice = #{homepageNotice},</if>
            <if test="homepageImg != null">homepage_img = #{homepageImg},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysHomepageById" parameterType="Long">
        delete from sys_homepage where id = #{id}
    </delete>

    <delete id="deleteSysHomepageByIds" parameterType="String">
        delete from sys_homepage where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>